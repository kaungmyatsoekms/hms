<record id = "view_property_form" model = "ir.ui.view">
            <field name = "name">property.form</field>
            <field name = "model">property.property</field>
            <field name = "arch" type = "xml">
                <form String = "Hotel">
                    <sheet>
                        <group>
                            <field name = "code" String = "Code"/>
                            <field name = "name" String = "Name"/>
                            <field name = "address1" String = "Address1"/>
                            <field name = "address2" String = "Address2"/>
                            <field name = "address3" String = "Address3"/>
                            <field name = "country_id" String = "Country"/>
                            <field name = "state_id" String = "State"/>
                            <field name = "city_id" String = "City"/>
                            <field name = "telephone" String = "Telephone"/>
                            <field name = "fax" String = "Fax"/>
                            <field name = "email" String = "Email"/>
                            <field name = "website" String = "Website"/>
                            <field name = "social_media_links" String = "Social Media"/>
                            <field name = "no_of_room" String = "Number of Rooms"/>
                            <field name = "proprety_license" String = "License"/>
                            <field name = "property_rating" String = "Rating"/>
                            <field name = "property_logo" String = "Hotel Logo"/>
                            <field name = "property_photo" String = "Hotel Photo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id = "open_property_form" model = "ir.actions.act_window">
            <field name = "name">action_property</field>
            <field name = "res_model">property.property</field>
            <field name = "view_mode">tree,form</field>
        </record>

        <menuitem id = "property_menu" name = "Hotel"/>
        
        <menuitem id = "property_management_menu" parent = "property_menu" name = "Setup Hotel" action = "open_property_form"/>
        
  </data>
</odoo>