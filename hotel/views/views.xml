<odoo>
  <data>
    <!-- explicit list view definition -->
    <!-- ==========Property Form View========== -->
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property.view.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form String="Property">
                <sheet>
                    <h2>Property Setup Form</h2>
                    <br></br>
                    <field name="property_logo" placeholder="Logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name"/>
                        </h2>
                        <label for="code" class="oe_edit_only"/>
                        <h2>
                            <field name="code"/>
                        </h2>
                        <notebook clospan="4">
                            <page>
                                <group>
                                    <group>
                                        <label for="address" String = "Address"/>
                                        <div class="o_address_format">
                                            <field name="address1" placeholder="Street...." class="o_address_street"/>
                                            <field name="address2" placeholder="Street2..." class="o_address_street"/>
                                            <field name="address3" placeholder="Township" class="o_address_street"/>
                                            <field name="city_id" placeholder="City...  ." class="o_address_city"/>
                                            <field name="state_id" placeholder="State" class="o_address_state" option='{"no_open":True}'/>
                                            <field name="city_id" placeholder="Country" class="o_address_country" option='{"no_open":True}'/>
                                        </div> 
                                        <field name="phone"/>
                                        <field name="fax"/>
                                        <field name="email"/>
                                        <field name="website" widget="url"/>
                                        <field name="sociallink" widget="url"/>
                                    </group>
                                    <group>
                                        <field name="no_of_room"/>
                                        <field name="property_license"/>
                                        <field name="property_rating"/>
                                        <field name="property_image" widget="image" class="float-left oe_avatar"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record id="property_action_window" model="ir.actions.act_window">
      <field name="name">Hotel Property</field>
      <field name="res_model">property.property</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- ==========Main Menu========== -->
    <menuitem name="Hotel" id="hotel_menu" sequence="5"/>

    <menuitem id="configuration_menu" name="Configuration"  parent="hotel_menu" sequence="10"/>

    <menuitem name="Hotel Configuration" id="property_configuration_menu" parent="configuration_menu" action="property_action_window" sequence="1"/>


    <!-- =========hotel room========= -->
    <record id="view_hotel_room_form" model="ir.ui.view" >
        <field name="name">Room</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>Room Setup Form</h2>
                    <br></br>
                    
                    <group>
                        <field name="room_no"/>
                        <field name="roomtypemap_code"/>
                        <field name="roomview_code" />
                        <field name="roommap_code" />
                        <field name="room_bedtype"/>
                        <field name="room_ratecode" />
                        <field name="room_facilitycode" />
                        <field name="room_size" />
                        <field name="room_extension" />
                        <field name="room_image" />
                        <field name="room_description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- ==========Hotel Room Action========== -->
    <record id="hotel_room_action_window" model="ir.actions.act_window" >
      <field name="name">Room</field>
      <field name="res_model">hotel.room</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Room Configuration" id="hotel_room_menu" parent="configuration_menu" action="hotel_room_action_window" sequence="10"/>

