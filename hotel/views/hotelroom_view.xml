<odoo>
    <data>
        <!-- ==========Room Type View========== -->
        <record id="room_type_view_form" model="ir.ui.view">
            <field name="name">room.type.view</field>
            <field name="model">hotel.roomtype</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>Room Type Setup</h2>
                        <br></br>
                        <field name="roomtype_image" placeholder="Image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="roomtype_name" class="oe_edit_only"/>
                            <h2>
                                <field name="roomtype_name"/>
                            </h2>
                            <label for="roomtype_code" class="oe_edit_only"/>
                            <h2>
                                <field name="roomtype_code"/>
                            </h2>
                            <notebook clospan="4">
                                <page>
                                    <group>
                                        <field name="roomtype_rate"/>
                                        <field name="roomtype_bedqty"/>
                                        <field name="roomtype_totalroom"/>
                                        <field name="roomtype_description"/>
                                    </group>
                                </page>
                            </notebook>
                        </div>   
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ==========Room Type Action============ -->

        <record id="room_type_action_window" model="ir.actions.act_window">
            <field name="name">Room Type</field>
            <field name="res_model">hotel.roomtype</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem id="room_type_config_menu" name="Room Type" parent="configuration_menu" action="room_type_action_window"/>

        <!-- =========hotel room========= -->
        <record id="view_hotel_room_form" model="ir.ui.view" >
            <field name="name">Room</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>Room Setup Form</h2>
                        <br></br>

                        <group>
                            <field name="room_no"/>
                            <field name="roomview_id" />
                            <field name="room_bedtype"/>
                            <field name="room_ratecode" />
                            <field name="room_facilitycode" />
                            <field name="room_size" />
                            <field name="room_extension" />
                            <field name="room_image" />
                            <field name="room_description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ==========Hotel Room Action========== -->
        <record id="hotel_room_action_window" model="ir.actions.act_window" >
            <field name="name">Room</field>
            <field name="res_model">hotel.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Room Configuration" id="hotel_room_menu" parent="configuration_menu" action="hotel_room_action_window" sequence="10"/>

        <!-- ===========Room View========== -->
        <record id="hotel_roomview_view_form" model="ir.ui.view">
            <field name="name">Room View</field>
            <field name="model">hotel.roomview</field>
            <field name="arch" type="xml">
                <form String="Room View">
                    <sheet>
                        <h2>Room View Setup Form</h2>
                        <br></br>
                        <group>
                            <field name="roomview_code"/>
                            <field name="roomview_name"/>
                            <field name="roomview_description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ===========Room View Action========== -->
        <record id="hotel_roomview_action_window" model="ir.actions.act_window">
            <field name="name">Room View</field>
            <field name="res_model">hotel.roomview</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- ==========Room View Menu========== -->
        <!-- <menuitem id="room_view_menu" name="Room View" 
                    parent="configuration_menu" action="hotel_roomview_action_window"/> -->

        <!-- ==========Bed Type========== -->
        <record id="hotel_bedtype_view_form" model="ir.ui.view">
            <field name="name">Bed Type</field>
            <field name="model">hotel.bedtype</field>
            <field name="arch" type="xml">
                <form String="Bed Type">
                    <sheet>
                        <h2>Bed Type Setup Form</h2>
                        <br></br>
                        <group>
                            <field name="bedtype_code"/>
                            <field name="bedtype_name"/>
                            <field name="bed_size"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ===========Bed Type Action========== -->
        <record id="hotel_bedtype_action_window" model="ir.actions.act_window">
            <field name="name">Bed Type</field>
            <field name="res_model">hotel.bedtype</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id="bedtype_menu" name="Bed Type" parent="configuration_menu" action="hotel_bedtype_action_window"/> -->



    </data>
</odoo>